// Comprehensive boolean string concatenation test
console.log("=== Boolean + String Concatenation Tests ===");

console.log("\n1. String literal + Boolean literal:");
console.log("Result: " + true);
console.log("Result: " + false);

console.log("\n2. Boolean literal + String literal:");
console.log(true + " <- Boolean");
console.log(false + " <- Boolean");

console.log("\n3. String variable + Boolean variable:");
const str1 = "Value: ";
const bool1 = true;
console.log(str1 + bool1);

console.log("\n4. Boolean variable + String variable:");
const bool2 = false;
const str2 = " is the value";
console.log(bool2 + str2);

console.log("\n5. Mixed concatenation:");
console.log("Start " + true + " middle " + false + " end");

console.log("\n6. Template literals (for comparison):");
console.log(`Boolean: ${true}`);
console.log(`Boolean: ${false}`);

console.log("\n7. Numeric boolean operations (should convert to 1/0):");
console.log(true + true);   // Should be 2
console.log(true + false);  // Should be 1
console.log(false + false); // Should be 0

console.log("\n=== All Tests Complete ===");
